\section{Samosličnost i FBM}
\begin{frame}{Samoslični slučajni procesi}
	\textbf{Definicija.} Slučajni proces \( \left\{X_t\right\} \) na \( \R^d \) je \emph{samosličan} ako za sve \( a > 0, t \ge 0 \) i neki \( H \ge 0 \)
	\begin{equation}
		\vit{X_{at}} \jpod
		\vit{a^H X_t}
	\end{equation}

	Parametar \( H \) zove se Hurstov parametar/eksponent.
\end{frame}

\begin{frame}{Frakcionalno Brownovo gibanje}
	\textbf{Definicija.} \emph{Frakcionalno Brownovo gibanje} (FBM) s parametrom \( H \in \langle0,1\rangle \) je gaussovki proces \( \left\{ B^H_t \st t \in \R \right\} \) u \( \R \) definiran s
	\[ \E B^H_t = 0, \quad t\in \R \]
	\begin{equation} \label{eq:deffbm}
		\E(B^H_t B^H_s) = \frac 12 \E \left[ (B^H_1)^2 \right]
		\left( \abs t^{2H} + \abs s^{2H} - \abs{t-s}^{2H} \right), \quad t,s\in \R.
	\end{equation}

	% \pause
	\vskip30pt

	\begin{itemize}
		\item jedinstveni centr.\ gauss.\ $H$-ss.\ proces sa stacionarnim prirastima
		\item prirasti korelirani
	\end{itemize}
\end{frame}

\begin{frame}[plain]{Parametar \( H \) i glatkoća trajektorija}
	\begin{figure}
		\center
		\includegraphics[scale=0.95]{fbm2.jpg}
		\caption{\footnotesize simulacije FBM za različite \( H \) (\cite{fracizvor})}
	\end{figure}
\end{frame}

\begin{frame}{Valićna reprezentacija FBM}
	\textbf{Teorem.} Neka je
	\begin{equation}
		B_t^H = \int_\R \frac{e^{it\xi}-1}{(i\xi)^{H+1/2}} \D \wh B_\xi, \quad t \in \R,
	\end{equation}
	\( \psi \) Meyerov matični valić i \( \varepsilon_{j,k} \stackrel{\mathrm{n.j.d.}}{\sim} \mathrm N(0,1) \) definirane sa
	\begin{equation}
		\varepsilon_{j,k} =
		\int_\R 2^{-j/2}e^{ik2^{-j}\xi}\wh \psi(-2^{-j}\xi)\D \wh B_\xi =
		\int_\R 2^{j/2} \psi(2^jt-k) \D B_t.
	\end{equation}
	Tada je
	\begin{equation}\label{eq:valfbmrep}
		B^H_t = \sum_{j,k \in \Z}
		2^{-jH} \left( \Psi_H(2^jt - k) - \Psi_H(-k)  \right) \varepsilon_{j,k}, \quad t \in \R
	\end{equation}
	pri čemu konvergencija vrijedi i g.s.\ uniformno po \( t \) na svakom
	kompaktnom podskupu od \( \R \).
\end{frame}


\begin{frame}{Integralne reprezentacije FBM}
	Definiramo
	\begin{equation}
		\int_\R \wh f(\xi) \D \wh B_\xi =
		\int_\R f(x) \D B_x, \quad f \in \L^2(\R).
	\end{equation}
	%\newcommand{\fourderi}[1]{\wh{{#1}^{\prime\phantom{.}}  }}
	Sjetimo se
	\begin{equation}
		\wh {f^{(n)}} (\xi) = (i\xi)^n \wh f(\xi), \quad f \in \mathrm C^n(\R)
	\end{equation}
	i očito
	\begin{equation}
		B_t = \int_\R 1_{\cc{0,t}}(u) \D B_u.
	\end{equation}

	Mandelbrot--van Ness:
	\begin{equation}
		B^H_t \jpod \int_\R \left[ (t-u)_+^{H-1/2}-(-u)_+^{H-1/2} \right] \D B_u, \quad t \in \R.
	\end{equation}

	Harmonizabilna reprezentacija:
	\begin{equation}
		B_t^H \jpod \int_\R \frac{e^{it\xi}-1}{(i\xi)^{H+1/2}} \D \wh B_\xi, \quad t \in \R.
	\end{equation}
\end{frame}

\begin{frame}{Funkcije \( \Psi_{\pm H} \)}
	Neka je \( \psi \) Meyerov matični valić. Definiramo
	\begin{align}
		\Psi_H(x)    & = \int_\R
		e^{ix\xi} \frac{\wh \psi(\xi)}{(i\xi)^{H+1/2}} \D \xi, \\
		\Psi_{-H}(x) & = \int_\R e^{ix\xi} \wh \psi(\xi)
		(-i\xi)^{H+1/2} \D \xi, \quad x \in \R.
	\end{align}

	\vskip20pt
	Vrijedi
	\begin{equation}
		\int_\R \Psi_{-H}(t) \D t = \int_\R \Psi_H(t) \D t = 0.
	\end{equation}
	\begin{equation}\label{eq:intpsihpsi-h}
		2^{(j'+j)/2}\int_\R \Psi_H(2^{j'}t-k')\Psi_{-H}(2^jt-k) \D t =
		\begin{cases}
			1, \  & (j,k)=(j',k') \\
			0, \  & \text{inače}.
		\end{cases}
	\end{equation}
\end{frame}

\section{Frakcionalna integracija}
\begin{frame}{Riemann-Liouvilleov frakcionalni integral}
	Cauchyjeva formula za opetovanu integraciju: za
	\begin{equation}
		f^{(-n)}(t)
		= \int_a^t \int_a^{\sigma_1}
		\cdots \int_a^{\sigma_{n-1}} f(\sigma_n) \D \sigma_n \cdots \D \sigma_1,
	\end{equation}
	vrijedi
	\begin{equation}
		f^{(-n)}(t) = \frac 1{(n-1)!} \int_a^x (x-t)^{n-1}f(t) \D t.
	\end{equation}

	Definiraju se lijevi i desni R--L frakcionalni integral
	% 2.1 Samko
	\begin{equation}
		I^\alpha_{a+} f(x) = \frac 1{\Gamma(\alpha)} \int_a^x
		(x-t)^{\alpha-1} f(t) \D t, \quad
		I^\alpha_{a-} f(x) = \frac 1{\Gamma(\alpha)} \int_x^a
		(t-x)^{\alpha-1} f(t) \D t
	\end{equation}
	za \( f \in \L^1(\R), \ \alpha > 0 \) i \( x > a \) ili \( x < a \) redom.

\end{frame}
\begin{frame}{Weylov frakcionalni integral}
	Lijevi i desni Weylov frakcionalni integral
	\begin{equation}
		I^\alpha_{+} f(x) = \frac 1{\Gamma(\alpha)} \int_{-\infty}^x
		(x-t)^{\alpha-1} f(t) \D t, \quad
		I^\alpha_{-} f(x) = \frac 1{\Gamma(\alpha)} \int_x^\infty
		(t-x)^{\alpha-1} f(t) \D t
	\end{equation}

	Fourierova transformacija (\cite[\textsection\:7.1]{fidta}):
	\begin{equation}
		\mathcal F(I_{\pm}^\alpha f)(\xi) = \frac{\wh f(\xi)}{(\pm i\xi)^\alpha},
	\end{equation}
	gdje \( 0 < \textsf{Re} \, \alpha < 1 \) i \( f \in \L^1(\R) \).

	\vskip30pt
	(uz konvenciju \( \wh f(\xi) = \int_\R f(x)e^{-i\xi x}\D x \))
	% \( (i\xi)^\alpha = \abs \xi e^{\sgn \xi \cdot i \alpha \pi/2} \))
\end{frame}

\begin{frame}{Diskretno frakcionalno deriviranje}
	Iz~\cite{mst}; krenimo od
	\begin{equation}
		\Delta f(k) = f(k) - f(k-1) = (I-\tau)f(k), \quad \tau f(k) = f(k-1).
	\end{equation}
	Zato \( \Delta^d \) za \( d \in \R \) definiramo preko
	\begin{equation}
		(I - r\tau)^d = \sum_{k=0}^\infty (-1)^k \binom{d}k r^k \tau^k
		\eqcolon \sum_{k=0}^\infty \gamma_k^{(d)} r_k \tau_k, \quad 0 < r < 1,
	\end{equation}
	tj.\
	\begin{equation}
		\Delta^d f(t) = \sum_{k=0}^\infty \gamma_k^{(d)} f(t-k)
	\end{equation}
	s konvergencijom za \( f \in \mathcal S(\R) \) zbog
	\( \gamma_k^{(d)} = O(k^{-1-d}) \).
\end{frame}
\begin{frame}[allowframebreaks]{Neprekidno frakcionalno deriviranje}
	U Fourierovoj domeni \( \wh{\tau f}(t) = e^{-i\xi}\wh f(\xi) \) pa
	\begin{equation}
		\wh{\Delta^d f}(t) = (1 - e^{-i\xi})^d \wh f(\xi),
	\end{equation}
	pri čemu
	\begin{equation}
		(1-e^{-i\xi})^d \coloneq \lim_{r \uparrow 1} (1 - re^{-i\xi})^d.
	\end{equation}

	\framebreak
	Definiramo \( \tau_h f(t) = f(t-h) \),
	\begin{equation}
		D^d = \lim_{h \downarrow 0} \ob{\frac{I-\tau_h}h}^d,
	\end{equation}
	onda u Fourierovoj domeni
	\begin{equation}
		\wh{D^d} = \lim_{h \downarrow 0} \ob{\frac{1-e^{-i\xi h}}h}^d =
		\lim_{h \downarrow 0} \ob{\frac{1- e^{-ih\xi}}{ih\xi}}^d(i\xi)^d = (i\xi)^d
	\end{equation}
	u smislu
	\begin{equation}
		\wh{D^d f}(\xi) = (i\xi)^d \wh f(\xi).
	\end{equation}
\end{frame}



